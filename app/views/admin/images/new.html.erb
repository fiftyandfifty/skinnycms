<h1>Add a New Image</h1>

<% if @image.errors.any? %>
<div id="errorExplanation">
  <h2>
    <%= pluralize(@image.errors.count, "error") %>
    prohibited this user from being saved:
  </h2>
  <ul>
    <% @image.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% form_for @image, :as => :image, :url => admin_images_path, :html => { :multipart => true } do |f| %>
<fieldset>
  <h3>Image Information</h3>
  <ul>
    <li>
      <label>Title</label>
      <%= f.text_field :title %>
    </li>
    <li>
      <label>Description</label>
      <%= f.text_area :description, :style => "width:100%; height: 100px;" %>
    </li>
    <li>
      <label>File:</label>
      <%= f.file_field :image %>
    </li>
  </ul>
</fieldset>

<div>
  <input type="submit" name="submit" value="Upload Image" id="submit" />
</div>
<% end %>
