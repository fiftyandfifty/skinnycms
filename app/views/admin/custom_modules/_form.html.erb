<%= javascript_include_tag 'skinnycms/jquery/jquery-1.4.4.min.js' %>
<%= javascript_include_tag 'skinnycms/jquery/jquery-ui-1.8.7.custom.min.js' %>

<style type="text/css">
input.save_button {
  margin: 0;
  border: 1px dashed #97C3EB;
}

.parent_container {
  margin-bottom:10px;
}
</style>
<script type="text/javascript">

$(document).ready(function(){

  <!-- WYSIWYG drag and drop logic test -->

  // Basic drag and drop elements
  //$(ui.draggable) draggable element
  //$(this) droppable element

  $('#large_content').hide();
  $('#medium_content').hide();
  $('#small_content').hide();

  $('#wysiwyg').draggable({
    helper : 'clone',
    opacity : 0.3
  });

  $('#large_title').droppable({
    tolerance : 'fit',
    accept : '#wysiwyg',
    drop : function(event, ui) {
      if(!status){
        $('div#large_content').css('height','335px');
        $('div#large_content > .holder').css('height','310px');
        $('#frame_large_content').css('height','285px');
        $('#custom_module_content_ifr').css('height','247px');
        $('div#large_content').fadeIn('slow');
        $('#large_title').fadeOut('slow');
      }
    }
  });

  $('#medium_title').droppable({
    tolerance : 'fit',
    accept : '#wysiwyg',
    drop : function(event, ui) {
      if(!status){
        $('div#medium_content').css('height','335px');
        $('div#medium_content > .holder').css('height','310px');
        $('#frame_medium_content').css('height','285px');
        $('#custom_module_header_ifr').css('height','247px');
        $('div#medium_content').fadeIn('slow');
        $('#medium_title').fadeOut('slow');
      }
    }
  });

  $('#small_title').droppable({
    tolerance : 'fit',
    accept : '#wysiwyg',
    drop : function(event, ui) {
      if(!status){
        $('div#small_content').css('height','335px');
        $('div#small_content > .holder').css('height','310px');
        $('#frame_small_content').css('height','285px');
        $('#custom_module_sidebar_ifr').css('height','247px');
        $('div#small_content').fadeIn('slow');
        $('#small_title').fadeOut('slow');
      }
    }
  });

  <!-- MODULES hide -->

  $('#hide_large_wysiwyg').click(function() {
    $('#large_content').fadeOut('slow');
    $('#large_title').fadeIn('slow');
  });

  $('#hide_medium_wysiwyg').click(function() {
    $('#medium_content').fadeOut('slow');
    $('#medium_title').fadeIn('slow');
  });

  $('#hide_small_wysiwyg').click(function() {
    $('#small_content').fadeOut('slow');
    $('#small_title').fadeIn('slow');
  });

  <!-- MODULES show -->

  $('#show_large_wysiwyg').click(function() {

    $('div#large_content').css('height','335px');
    $('div#large_content > .holder').css('height','310px');
    $('#frame_large_content').css('height','285px');
    $('#custom_module_content_ifr').css('height','247px');

    $('#large_content').fadeIn('slow');
    $('#large_title').fadeOut('slow');
  });

  $('#show_medium_wysiwyg').click(function() {

    $('div#medium_content').css('height','335px');
    $('div#medium_content > .holder').css('height','310px');
    $('#frame_medium_content').css('height','285px');
    $('#custom_module_header_ifr').css('height','247px');

    $('#medium_content').fadeIn('slow');
    $('#medium_title').fadeOut('slow');
  });

  $('#show_small_wysiwyg').click(function() {

    $('div#small_content').css('height','335px');
    $('div#small_content > .holder').css('height','310px');
    $('#frame_small_content').css('height','285px');
    $('#custom_module_sidebar_ifr').css('height','247px');

    $('#small_content').fadeIn('slow');
    $('#small_title').fadeOut('slow');
  });

});

</script>


