        <div class="inner" id="small_content">
          <% if @custom_module.id.present? %>
	    <div class="holder">
	      <div class="headline">
                <h4 class="small-content">Small Module Content</h4>
	        <a href="javascript:void(0);" id="hide_small_wysiwyg">Hide</a>
	      </div>
	      <div class="edit-box">
    	        <div class="holder">
		  <div class="frame">
		    <%= f.text_area "sidebar", :class => "field mceEditor", :style => "width:100%;" %>
		  </div>
	        </div>
	      </div>
	    </div>
          <% end %>
	</div>
       </div>
      </div>

